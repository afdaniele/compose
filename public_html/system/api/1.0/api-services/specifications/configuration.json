{
    "details" : "Provides the tools for managing the settings",
	"actions" : {
		"get" : {
			"details" : "Returns the value of a given parameter",
		    "parameters" : {
		        "mandatory" : {
		            "key" : {
		                "type" : "enum",
		                "values" : [
                            "maintenance_mode",
                        	"main_page_title",
                        	"admin_contact_email_address",
                        	"cache_enabled",
                        	"camera_1_enabled",
                        	"camera_2_enabled"
                        ],
		                "details" : "Name of the parameter to query"
		            }
		        },
		        "optional" : {}
		    },
		    "return" : {
		        "values" : {
		            "value" : {
                        "type" : "key-dependant",
                        "details" : "Value of the parameter (Serialized if array)"
                    }
		        }
		    }
		},
		"set" : {
			"details" : "Sets the value of a given parameter",
		    "parameters" : {
		        "mandatory" : {},
		        "optional" : {
                    "main_page_title" : {
                        "type" : "text",
                        "length" : null,
                        "details" : "Main title on HTML page or App"
                    },
                    "admin_contact_email_address" : {
                        "type" : "email",
                        "length" : null,
                        "details" : "E-mail address of the administrator"
                    },
                    "cache_enabled" : {
                        "type" : "boolean",
                        "length" : null,
                        "details" : "Cache status"
                    },
                    "server_disk_dev" : {
                        "type" : "text",
                        "length" : null,
                        "details" : "Storage partition device on the server (e.g., /dev/sda1)"
                    },
                    "surveillance_raw_data_path" : {
                        "type" : "text",
                        "length" : null,
                        "details" : "Path to the directory containing the raw videos recorded from the camera"
                    },
                    "surveillance_log_data_path" : {
                        "type" : "text",
                        "length" : null,
                        "details" : "Path to the directory containing the logs for the recording sessions"
                    },
                    "surveillance_activity_data_path" : {
                        "type" : "text",
                        "length" : null,
                        "details" : "Path to the directory containing the motion detection data"
                    }
                }
		    },
		    "return" : {}
		}
	}
}
