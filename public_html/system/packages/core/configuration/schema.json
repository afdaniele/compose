        "logo_white": {
            "title": "Logo (light)",
            "type": "string",
            "default": "~/images/compose-white-logo.svg",
            "description": "App logo (for dark backgrounds). <code>~</code> autocompletes to <code>http(s)://HOSTNAME</code>."
        },
        "logo_black": {
            "title": "Logo (dark)",
            "type": "string",
            "default": "~/images/compose-black-logo.svg",
            "description": "App logo (for light backgrounds). <code>~</code> autocompletes to <code>http(s)://HOSTNAME</code>."
        },
        "logo_white_small": {
            "title": "Logo (light / small)",
            "type": "string",
            "default": "~/images/compose-white-logo-small.svg",
            "description": "(Small) app logo (for dark backgrounds). <code>~</code> autocompletes to <code>http(s)://HOSTNAME</code>."
        },
        "logo_black_small": {
            "title": "Logo (dark / small)",
            "type": "string",
            "default": "~/images/compose-black-logo-small.svg",
            "description": "(Small) app logo (for light backgrounds). <code>~</code> autocompletes to <code>http(s)://HOSTNAME</code>."
        },
        "admin_contact_email_address": {
            "title": "Administrator e-mail",
            "type": "string",
            "format": "email",
            "default": "administrator@example.com",
            "description": "E-mail address of the administrator"
        },
        "login_enabled": {
            "title": "Enable Login",
            "type": "boolean",
            "default": true,
            "description": "Enable user login functionality"
        },
        "google_client_id": {
            "title": "Google Client ID",
            "type": "string",
            "default": "NULL",
            "description": "Google Client ID. Get one from https://console.developers.google.com/apis/credentials"
        },
        "cache_enabled": {
            "title": "Enable Cache",
            "type": "boolean",
            "default": false,
            "description": "Cache status"
        },
        "check_updates": {
            "title": "Check for Updates",
            "type": "boolean",
            "default": true,
            "description": "Whether the system should constantly check for updates"
        },
        "allow_devel_updates": {
            "title": "Allow beta update",
            "type": "boolean",
            "default": false,
            "description": "Whether to allow updating to non-production ready versions"
        },
        "theme": {
            "title": "Theme",
            "type": "string",
            "default": "core:default",
            "description": "The theme used by \\compose\\",
            "__form__": {
                "enum_filler_fcn": "_installed_themes",
                "enum_filler_args": []
            }
        },
        "favicon": {
            "title": "Icon",
            "type": "string",
            "default": "core",
            "description": "Package whose icon (favicon) should be used for the site",
            "__form__": {
                "enum_filler_fcn": "_available_favicons",
                "enum_filler_args": []
            }
        },
        "hide_credits": {
            "title": "Hide credits",
            "type": "boolean",
            "default": false,
            "description": "Hide compose credits",
            "__form__": {
                "hidden": true
            }
        },
        "guest_default_page": {
            "title": "Default page (guest)",
            "type": "string",
            "default": "login",
            "description": "The page the guest will be redirected to when no page is specified",
            "__form__": {
                "enum_filler_fcn": "_pages_avail_to_role",
                "enum_filler_args": ["guest"]
            }
        },
        "user_default_page": {
            "title": "Default page (user)",
            "type": "string",
            "default": "profile",
            "description": "The page the user will be redirected to when no page is specified",
            "__form__": {
                "enum_filler_fcn": "_pages_avail_to_role",
                "enum_filler_args": ["user"]
            }
        },
        "supervisor_default_page": {
            "title": "Default page (supervisor)",
            "type": "string",
            "default": "profile",
            "description": "The page the supervisor will be redirected to when no page is specified",
            "__form__": {
                "enum_filler_fcn": "_pages_avail_to_role",
                "enum_filler_args": ["supervisor"]
            }
        },
        "administrator_default_page": {
            "title": "Default page (administrator)",
            "type": "string",
            "default": "profile",
            "description": "The page the administrator will be redirected to when no page is specified",
            "__form__": {
                "enum_filler_fcn": "_pages_avail_to_role",
                "enum_filler_args": ["administrator"]
            }
        }
    },
    "additionalProperties": false
}
