{
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "Name of the page"
        },
        "icon": {
            "type": "object",
            "description": "The page's icon",
            "properties": {
                "class": {
                    "type": "string",
                    "description": "Class of icon",
                    "default": "bi"
                },
                "name": {
                    "type": "string",
                    "description": "Name of the icon"
                }
            },
            "default": null,
            "additionalProperties": false
        },
        "menu_entry": {
            "type": ["null", "object"],
            "description": "Information about the menu entry for the page",
            "properties": {
                "order": {
                    "type": "number",
                    "description": "The order of the page on the top menu bar (smallest number = leftmost entry)",
                    "default": 0
                },
                "responsive": {
                    "type": "object",
                    "description": "Responsiveness of the menu entry",
                    "properties": {
                        "priority": {
                            "type": "number",
                            "description": "Priority with which the menu entry will be contracted (highest number = contracted first)",
                            "default": 0
                        }
                    },
                    "default": {
                        "priority": 0
                    },
                    "additionalProperties": false
                },
                "exclude_roles": {
                    "type": "array",
                    "description": "List of user roles for which this page icon should be hidden",
                    "items": {
                        "type": "string",
                        "description": "Fully resolved role to exclude"
                    },
                    "default": [],
                    "additionalItems": false
                }
            },
            "default": {
                "order": 0,
                "responsive": {
                    "priority": 0
                },
                "exclude_roles": []
            },
            "additionalProperties": false
        },
        "child_pages": {
            "type": "array",
            "description": "The menu entry of the page will be highlighted if the current page matches the `name` of this class or any ID in this list",
            "items": {
                "type": "string",
                "description": "ID of a child page"
            },
            "default": [],
            "additionalItems": false
        },
        "access_level": {
            "type": "array",
            "description": "List of user roles for which this page is accessible",
            "items": {
                "type": "string",
                "description": "User role to grand access to"
            },
            "default": [
                "administrator"
            ],
            "additionalItems": false
        }
    },
    "required": [
        "name"
    ],
    "allOf": [
        {
            "description": "If menu_entry is given and it is an object, icon is required",
            "if": {
                "properties": {
                    "menu_entry": {
                        "type": "object"
                    }
                },
                "required": ["menu_entry"]
            },
            "then": {
                "required": ["icon"]
            }
        },
        {
            "description": "If menu_entry is not given, icon is required",
            "if": {
                "not": {
                    "required": ["menu_entry"]
                }
            },
            "then": {
                "required": ["icon"]
            }
        }
    ],
    "additionalProperties": false
}
